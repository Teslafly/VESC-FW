    "version": "0.2.0",
    "configurations": [
        {
            "name": "VESC Debug",
            "cwd": "${workspaceRoot}",
            "executable": "./build/BLDC_4_ChibiOS.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            // "device": "STM32F405RG",
            "configFiles": [
                "stm32-bv_openocd.cfg"
            ],
            "preLaunchTask": "upload", // runs make upload to compile and upload latest code
            "linux": {
                "MIMode": "gdb",
                "MIDebuggerPath": "/usr/bin/arm-none-eabi-gdb",
                "debugServerPath": "openocd"
            },
            "windows": {
                
            }
        }
    ]
