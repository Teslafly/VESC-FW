    // Sample config: https://os.mbed.com/users/janjongboom/notebook/debugging-ublox_evk_odin_w2-with-openocd-and-visua/
    "version": "0.3.0",
    "configurations": [
        {
            "name": "VESC Debug (Openocd-remotewin)",
            "request": "launch",
            "type": "cortex-debug",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/BLDC_4_ChibiOS.elf",
            // "servertype": "openocd",
            "showDevDebugOutput": true,
            "device": "stm32f4x",
            "svdFile": "./STM32F407.svd",
            "configFiles": [
                "interface/stlink-v2.cfg",
                "target/stm32f4x_stlink.cfg"
            ],
            // "runToMain": true,
            
            "linux": {
                "preLaunchTask": "build",
                "armToolchainPath": "/home/mscholz/tools/gcc-arm-none-eabi-6-2017-q2-update/bin/",
                "servertype": "external",
                "gdbTarget": "MAS-GAMING:3333",
                // "gdbTarget": "$(hostname):3333",
            },
            "windows": {
                "preLaunchTask": "build"
            },
        }       
    ]
}
