{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ]
        },

        {
            "label": "upload",
            "type": "shell",
            "command": "make upload"
        },

        {
            "label": "Launch OpenOCD",
            "command": "openocd.exe",
            "args": [
                "-f",
                "${input:openocd.config}",
                "-c",
                "\"bindto 0.0.0.0\""
            ],
            "type": "shell",
            "isBackground": true,
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "openocd.config",
            "type": "pickString",
            "description": "Select the configuration file for OpenOCD",
            "options": [
                "board/stm32f0discovery.cfg"
            ],
            "default": "board/stm32f0discovery.cfg"
        }
    ]
}